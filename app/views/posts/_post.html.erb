<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>
  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>
  <p>
    <strong>Author:</strong>
    <%= post.author %>
  </p>
  <p>
    <strong>Tags:</strong>
    <%= post.tags.count %>
  </p>
  <p>
    <strong>Tags:</strong>
    <%= post.tags.map(&:title).join(', ') %>
  </p>
</div>
